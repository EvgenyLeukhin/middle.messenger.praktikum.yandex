<%- include('./components/page-wrapper-start', { title: 'Authorization | Web-messanger' }) -%>

<main>
  <section class="authorization">
    <div class="container">
      <h2>Вход</h2>

      <form
        id="authorization__form"
        class="authorization__form"
        action=""
        method="post"
      >
        <div class="form-loader">
          <%- include('./components/loader') -%>
        </div>

        <!-- login -->
        <div class="form-group">
          <div class="input-wrapper">
            <input
              id="authorization__login"
              type="text"
              name="login"
              value="ivanivanov"
            />
            <label for="login">Логин</label>
          </div>

          <p class="form-group__validation"></p>
        </div>

        <!-- password -->
        <div class="form-group">
          <div class="input-wrapper">
            <input
              id="authorization__password"
              type="password"
              name="password"
              value="ivanivanov"
            />
            <label for="password">Пароль</label>
          </div>

          <p class="form-group__validation"></p>
        </div>

        <!-- controls -->
        <div class="form-controls">
          <button type="submit">Авторизоваться</button>
          <a href="registration.ejs">Нет аккаунта?</a>
        </div>
      </form>

    </div>
  </section>
</main>

<script type="module" src="../js/authorization.js"></script>

<%- include('./components/page-wrapper-end') -%>
