<%- include('./components/page-wrapper-start', { title: 'Edit user | Web-messanger' }) -%>

<%- include('./components/go-back-button', { link: 'user-settings.ejs' }) -%>

<main>
  <section class="edit-user">
    <div class="container">
      <!-- user-avatar -->
      <%-
        include('./components/user-avatar',
          {
            editable: true,
            name: '',
            image: 'url(https://images.unsplash.com/photo-1529068755536-a5ade0dcb4e8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=881&q=80)'
          }
        )
      -%>

      <form class="edit-user__form" id="edit-user" action="" method="post">
        <!-- form-loader -->
        <%- include('./components/form-loader') -%>

        <!-- email -->
        <%- include('./components/form-group', {
          label: 'Почта',
          id: 'edit-user__email',
          type: 'email',
          name: 'email',
          value: 'pochta@yandex.ru',
        }) -%>

        <!-- login -->
        <%- include('./components/form-group', {
          label: 'Логин',
          id: 'edit-user__login',
          type: 'text',
          name: 'login',
          value: 'ivanivanov',
        }) -%>

        <!-- first_name -->
        <%- include('./components/form-group', {
          label: 'Имя',
          id: 'edit-user__first_name',
          type: 'text',
          name: 'first_name',
          value: 'Иван',
        }) -%>

        <!-- second_name -->
        <%- include('./components/form-group', {
          label: 'Фамилия',
          id: 'edit-user__second_name',
          type: 'text',
          name: 'second_name',
          value: 'Иванов',
        }) -%>

        <!-- display_name -->
        <%- include('./components/form-group', {
          label: 'Имя в чате',
          id: 'edit-user__display_name',
          type: 'text',
          name: 'display_name',
          value: 'Иванов',
        }) -%>

        <!-- phone -->
        <%- include('./components/form-group', {
          label: 'Телефон',
          id: 'edit-user__phone',
          type: 'tel',
          name: 'phone',
          value: '+7 (909) 967 30 30',
        }) -%>

        <!-- submit button -->
        <%- include('./components/button', { text: 'Сохранить' }) -%>
      </form>
    </div>
  </section>
</main>

<div class="change-avatar-modal" hidden>
  <div class="change-avatar-modal__content">
    <div class="change-avatar-modal__close"></div>
    <h4>Загрузите файл</h4>
    <label for="user-avatar" class="text-primary">
      Выбрать файл на <br />компьютере
    </label>
    <input type="file" name="user-avatar" id="user-avatar">
    <%- include('./components/button', { text: 'Поменять' }) -%>
  </div>
</div>

<script type="module" src="../js/edit-user.ts"></script>

<%- include('./components/page-wrapper-end') -%>
