<%- include('./components/page-wrapper-start', { title: 'Change password | Web-messanger' }) -%>

<%- include('./components/go-back-button', { link: 'user-settings.ejs' }) -%>

<main>
  <section class="change-password">
    <div class="container">
      <!-- user-avatar -->
      <%-
        include('./components/user-avatar',
        { name: 'Иван', image: 'url(https://images.unsplash.com/photo-1529068755536-a5ade0dcb4e8?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=881&q=80)' })
      -%>

      <form class="change-password__form" id="change-password" action="" method="post">
        <!-- form-loader -->
        <%- include('./components/form-loader') -%>

        <!-- oldPassword -->
        <%- include('./components/form-group', {
          label: 'Старый пароль',
          id: 'change-password__oldPassword',
          type: 'password',
          name: 'oldPassword',
          value: '',
        }) -%>

        <!-- newPassword -->
        <%- include('./components/form-group', {
          label: 'Новый пароль',
          id: 'change-password__newPassword',
          type: 'password',
          name: 'newPassword',
          value: '',
        }) -%>

        <!-- newPassword-repeant -->
        <%- include('./components/form-group', {
          label: 'Повторите новый пароль',
          id: 'change-password__newPassword-repeant',
          type: 'password',
          name: 'newPassword-repeant',
          value: '',
        }) -%>

        <!-- submit button -->
        <%- include('./components/button', { text: 'Сохранить' }) -%>
      </form>
    </div>
  </section>
</main>

<script type="module" src="../js/change-password.ts"></script>

<%- include('./components/page-wrapper-end') -%>
